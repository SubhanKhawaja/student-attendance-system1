<%- include('partials/header') %>
  <h2>Student List</h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Roll Number</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% students.forEach(student => { %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.rollNumber %></td>
          <td>
            <a href="/edit-student/<%= student._id %>">Edit</a>
            <a href="/delete-student/<%= student._id %>" onclick="return confirm('Are you sure?')">Delete</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<%- include('partials/footer') %>